<Window x:Class="Luna.Desktop.ListeningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Luna – Listening"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#80000000"
        ShowInTaskbar="False"
        Topmost="True"
        Width="520" Height="520"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Pulsierender Kreis -->
        <Grid>
            <Ellipse x:Name="Pulse" Width="180" Height="180" Stroke="White" StrokeThickness="4" Fill="White"/>
        </Grid>

        <!-- Hilfe-Text unten -->
        <TextBlock Grid.Row="1" Text="Sprich jetzt …" Foreground="White"
               HorizontalAlignment="Center" Margin="0,24,0,24" FontSize="20"/>
    </Grid>
</Window>
